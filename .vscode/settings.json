{
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.fixAll.stylelint": true
  },
  "prettier.prettierPath": "node_modules/prettier",
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "files.exclude": {
    "*.tsbuildinfo": true,
    ".editorconfig": true,
    ".env*": true,
    ".eslintcache": true,
    ".eslintignore": true,
    ".eslintrc.cjs": true,
    ".github": true,
    ".husky": true,
    ".keystone": true,
    ".lintstagedrc.cjs": true,
    ".prettierignore": true,
    ".prettierrc.cjs": true,
    ".scripts": true,
    ".stylelintrc.json": true,
    "dist": true,
    "keystone.db": true,
    "node_modules": true,
    "package-lock.json": true,
    "postcss.config.cjs": true,
    "schema.graphql": true,
    "schema.prisma": true,
    "tsconfig.json": true,
    "vite.config.ts": true,
    "src/vite-env.d.ts": true
  }
}
