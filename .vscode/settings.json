{
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.fixAll.stylelint": true
  },
  "prettier.prettierPath": "node_modules/prettier",
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "files.exclude": {
    ".scripts": true,
    "**/node_modules": true,
    "**/.husky": true,
    "**/.github": true,
    "**/.editorconfig": true,
    "**/.eslintcache": true,
    "**/.eslintignore": true,
    "**/.eslintrc.js": true,
    "**/.stylelintrc.json": true,
    "**/.prettierignore": true,
    "**/package-lock.json": true,
    "**/tsconfig.json": true,
    "**/tsconfig.node.json": true,
    "**/.lintstagedrc.js": true,
    "**/.prettierrc.js": true,
    "**/postcss.config.js": true,
    "**/vite.config.ts": true,
    "**/vite-env.d.ts": true
  }
}
